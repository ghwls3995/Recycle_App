<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- 메인 이미지 -->
            <ImageView
                android:id="@+id/mainImage"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@id/toolbar"
                android:scaleType="centerCrop"
                android:src="@drawable/appmainpage" />

            <!-- 수거 신청 버튼 -->
            <Button
                android:id="@+id/btnRequestPickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수거신청"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/btn"
                android:background="@drawable/rounded_button_with_border"
                android:layout_below="@id/mainImage"
                android:layout_marginTop="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>

            <!-- 공지사항 버튼 -->
            <Button
                android:id="@+id/btnNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공지사항"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/btn"
                android:background="@drawable/rounded_button_with_border"
                android:layout_below="@id/btnRequestPickup"
                android:layout_marginTop="10dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>

            <!-- 신청현황 버튼 -->
            <Button
                android:id="@+id/btnStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수거현황"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/btn"
                android:background="@drawable/rounded_button_with_border"
                android:layout_below="@id/btnNotice"
                android:layout_marginTop="10dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>